doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.container 
      nav.navbar.navbar-expand-sm.navbar-light
        div.container-fluid
          a.navbar-brand(href='/') Members Only
          button.navbar-toggler(type='button' data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon      
          div.collapse.navbar-collapse#navbarNavAltMarkup
          div.navbar-nav
            if currentUser 
              if currentUser.membershipStatus == 'Member'
                a.nav-link(href="/message/new") New Message
              a.nav-link(href="/member") Member
              a.nav-link(href="/sign-out") Sign out 
            else 
              a.nav-link(href="/login") Log in
              a.nav-link(href="/sign-up") Sign up 

      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous")
